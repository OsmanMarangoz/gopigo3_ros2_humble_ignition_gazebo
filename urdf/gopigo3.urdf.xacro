<?xml version="1.0" ?>
<robot name="gopigo3" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find gopigo3_simulation)/urdf/common_properties.xacro"/>
  <xacro:include filename="$(find gopigo3_simulation)/urdf/gopigo3.gazebo.xacro"/>
  <xacro:property name="CADscale" value="0.0012" />
  
<link name="base_footprint"/>

<joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.075" rpy="0 0 0"/>
</joint>

<link name="base_link">
    <collision>
      <origin xyz="-0.038 0 -0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.245 0.088 0.07"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="-0.02 0 0" rpy="0 0 0"/>
      <mass value="0.534"/>
      <inertia ixx="1.0e-03" ixy="0" ixz="0"
              iyy="1.0e-03" iyz="0"
              izz="2.45e-03" />
    </inertial>
</link>

<joint name="base_joint_cad" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link_cad"/>
    <origin xyz="-0.02 0 0.033" rpy="0 0 -4.71"/>
</joint>

<link name="base_link_cad">
    <visual>
      <origin xyz="0.03 0.097 -0.038" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://gopigo3_simulation/meshes/GoPiGo3_Body.stl" scale="${CADscale} ${CADscale} ${CADscale}"/>
      </geometry>
      <material name="blue"/>
    </visual>
</link>

<!-- ============ wheel_left ====================== -->
<joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0 0.058 -0.042" rpy="0 0 1.57"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <!-- Decentering of wheel CAD model coordinate system-->
      <origin xyz="-0.22581 -0.200334 -0.033582" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://gopigo3_simulation/meshes/GoPiGo3_Wheel.stl" scale="0.001158 0.001158 0.001158"/>
      </geometry>
      <material name="black"/>
    </visual>

    <!-- **** 'wheel_left' COLLISION & INERTIA **** -->
    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.026" radius="0.033"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.032" />
      <inertia ixx="1.74e-05" ixy="0" ixz="0"
               iyy="1.05e-05" iyz="0"
               izz="1.05e-05" />
    </inertial>
  </link>
<!-- ============ wheel_right ====================== -->
<joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0 -0.058 -0.042" rpy="0 0 -1.57"/>
    <axis xyz="-1 0 0"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="-0.22581 -0.200334 -0.033582" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://gopigo3_simulation/meshes/GoPiGo3_Wheel.stl" scale="0.001158 0.001158 0.001158"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.026" radius="0.033"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.032" />
      <inertia ixx="1.74e-05" ixy="0" ixz="0"
               iyy="1.05e-05" iyz="0"
               izz="1.05e-05" />
    </inertial>
  </link>

<!-- ============ caster_back ====================== -->
<joint name="caster_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_link"/>
    <origin xyz="-0.132 0 -0.075" rpy="0 0 0"/>
  </joint>

  <link name="caster_back_link">
    <collision>
      <origin xyz="0 0 0.01" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.009" radius="0.01"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

  <joint name="distance_sensor_joint" type="fixed">
    <parent link="base_link"/>
    <child link="distance_sensor"/>
    <origin xyz="0.065 0 0.025" rpy="0 0 0"/>
  </joint>
  <!-- ============ Distance sensor ====================== -->
  <link name="distance_sensor">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 1.57"/>
      <geometry>
        <mesh filename="package://gopigo3_simulation/meshes/IR_Sensor_Sharp_GP2Y_solid.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="red"/>
    </visual>

    <inertial>
      <mass value="0.001" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-9" ixy="0" ixz="0" iyy="1e-9" iyz="0" izz="1e-9" />
    </inertial>
  </link>
</robot>